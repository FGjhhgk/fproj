@model FProj.Api.ResponsePage<FProj.Api.FilmApi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="body">
    @foreach (var film in Model.Data)
    {
        <div class="col-md-12">
            <div class="col-md-4">
                @if (@film.Poster != null)
                {
                    <img class="img-thumbnail poster" src="@film.Poster.Path" />
                }
            </div>
            <div class="col-md-8">
                <h3><b>@film.Title</b></h3>
                <table class="table table-responsive" style="text-align:justify">
                    <tr>
                        <td>Director</td>
                        <td>@film.Director</td>
                    </tr>

                    <tr>
                        <td>Duration</td>
                        <td>@film.Duration min</td>
                    </tr>

                    <tr>
                        <td>Premiere Date</td>
                        <td>@film.PremiereDate.ToShortDateString()</td>
                    </tr>

                    <tr>
                        <td>Rate</td>
                        <td>@film.Rate+</td>
                    </tr>

                    <tr>
                        <td>Description</td>
                        <td>@film.Description</td>
                    </tr>    
                

                    <tr>
                        <td>
                            <button class="btn btn-primary details" data-id="@film.Id">Details</button>
                        
                        </td>
                        <td></td>
                    </tr>
                </table>
            </div>   
        </div>
    }
</div>
<div class="col-md-12">
    <ul class="pagination">
    @for (int i = 1; i <= Model.Count; i++)
    {
        <li><a class="page @(i == 1 ? "active" : "" )" data-id="@i" href="#">@i</a></li>
    }
</ul>

</div>
<script>

$(function() {
    $(".details").click(function () {
        location.href = '@Url.Action("Details")/' + $(this).attr("data-id");
    });

    $(".page").click(function () {
        if ($(this).hasClass("active")) return false;

        $(".active").removeClass("active");
        let page = $(this).attr("data-id");
        $(this).addClass("active");

        $.ajax({
            type: "get",
            url: '@Url.Action("GetPage")',
            data: {
                CountPerPage: 5,
                PageNumber: page
            },
            success: function(response) {
                $("#body").html("");
                 
                response.Data.forEach(x => $("#body").append(BuildFilm(x)));
            }
        });
        return false;
    });

    function BuildFilm(film) {
        return `
    <div class="col-md-12">
        <div class="col-md-4">          
                <img class="img-thumbnail poster" src="${film.Poster.Path}" />
        </div>
        <div class="col-md-8">
            <h3><b>${film.Title}</b></h3>
            <table class="table table-responsive" style="text-align:justify">
                <tr>
                    <td>Director</td>
                    <td>${film.Director}</td>
                </tr>

                <tr>
                    <td>Duration</td>
                    <td>${film.Duration} min</td>
                </tr>

                <tr>
                    <td>Premiere Date</td>
                    <td>${film.PremiereDate}</td>
                </tr>

                <tr>
                    <td>Rate</td>
                    <td>${film.Rate}+</td>
                </tr>

                <tr>
                    <td>Description</td>
                    <td>${film.Description}</td>
                </tr>


                <tr>
                    <td>
                        <button class="btn btn-primary details" data-id="${film.Id}">Details</button>
                    </td>
                    <td></td>
                </tr>
            </table>
        </div>
    </div>
`;
    }
})

</script>